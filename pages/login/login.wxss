.checkbox-item{
  display: flex;
  align-items: center;
}
.checkbox-item checkbox{
  margin-right: 20rpx;
}

.sign_in{
  display: flex;
  padding: 20rpx;
  margin-top: 30rpx;
  align-items: center;
  justify-content: center;
}


.dialog {
  position: fixed;
  width: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #eee;
  padding: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  /* 其他样式属性根据需要添加 */
}

.form_btn{
  display: flex;
  /* align-content: center; */
  margin-top: 50rpx;
  justify-content: space-around;
}