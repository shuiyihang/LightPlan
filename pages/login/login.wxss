.header {
  display: flex;
  justify-content: center;
  margin: 106rpx 0;
}

.header image {
  width: 400rpx;
  height: 176rpx;
  scale: 70%;
}


.form-item{
  height: 98rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(232, 232, 232, 0.86);
  box-shadow: 0rpx 0rpx 2rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 48rpx;
}
.form-item image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
}

.login button{
  width: 100%;
  height: 90rpx;
  border-radius: 60rpx;
  /* CSS 中用于创建线性渐变背景的属性,和bg一起使用 */
  background: linear-gradient(
    to right,
    #8dc63f 1%,
    #39b54a 100%
  );
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  color: #fff;
  margin-top: 100rpx;
}
